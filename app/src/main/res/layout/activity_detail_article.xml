<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.article.DetailArticleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/green" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/article_detail"
                android:background="?android:attr/colorBackground"
                app:navigationIcon="@drawable/arrow_back"
                app:navigationContentDescription="Back"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivArticle"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/topAppBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.RoundedImageView"
                tools:src="@tools:sample/backgrounds/scenic"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvArticleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textStyle="bold"
                android:textSelectHandleLeft="@drawable/handle_left"
                android:textSelectHandleRight="@drawable/handle_right"
                android:textColorHighlight="@color/pink"
                android:fontFamily="@font/poppinsb"
                app:layout_constraintTop_toBottomOf="@id/ivArticle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/green"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"
                tools:text="@string/article_title_goes_here"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvArticleDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColorHighlight="@color/green"
                android:textSelectHandleLeft="@drawable/handle_left"
                android:textSelectHandleRight="@drawable/handle_right"
                android:fontFamily="@font/poppinsr"
                android:layout_marginHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="?android:attr/textColorSecondary"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:textIsSelectable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/tvArticleTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/disease_decryption_goes_here"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHandlingSteps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHighlight="@color/green"
                android:textSelectHandleLeft="@drawable/handle_left"
                android:textSelectHandleRight="@drawable/handle_right"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppinsr"
                android:textColor="?android:attr/textColorSecondary"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:textIsSelectable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/tvArticleDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnShare"
                tools:text="@string/disease_handling_decryption_goes_here"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/share"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/green"
                android:background="@drawable/rounded"
                app:layout_constraintTop_toBottomOf="@id/tvHandlingSteps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>