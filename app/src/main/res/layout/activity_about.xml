<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:clipToPadding="false"
    android:paddingBottom="72dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="About"
            app:navigationIcon="@drawable/arrow_back"
            android:background="@android:color/transparent"
            app:titleTextColor="@color/text_primary"/>

        <!-- App Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/background_secondary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cek Apel"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinsb"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0.0"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About App Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/background_secondary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Our App"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsb"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our app is designed to provide a seamless and intuitive experience for users. We are committed to delivering high-quality solutions that make your daily tasks easier and more efficient."
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsb"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: cekapel.capstone@gmail.com"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FAQ Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_secondary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frequently Asked Questions"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsb"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"/>

                <!-- FAQ 1 -->
                <TextView
                    android:id="@+id/faq_question_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pertanyaan Pertama"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/faq_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jawaban untuk pertanyaan pertama akan ditulis di sini dengan detail yang jelas dan informatif."
                    android:textSize="14sp"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:background="@color/background_primary"
                    android:padding="8dp"/>

                <!-- FAQ 2 -->
                <TextView
                    android:id="@+id/faq_question_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pertanyaan Kedua"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/faq_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jawaban untuk pertanyaan kedua akan ditulis di sini dengan penjelasan yang komprehensif dan mudah dipahami."
                    android:textSize="14sp"
                    android:fontFamily="@font/poppinsr"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone"
                    android:background="@color/background_primary"
                    android:padding="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>